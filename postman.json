{
	"info": {
		"name": "Movies API",
		"description": "Collection pour tester l'API de gestion des films",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Créer un film",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Inception\",\n    \"description\": \"Un thriller de science-fiction complexe sur les rêves dans les rêves\",\n    \"genre\": \"ACTION\",\n    \"duration\": 148,\n    \"release_date\": \"2010-07-16T00:00:00+00:00\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/movies",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"movies"
					]
				},
				"description": "Créer un nouveau film"
			}
		},
		{
			"name": "Obtenir tous les films",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/movies",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"movies"
					]
				},
				"description": "Récupérer la liste de tous les films"
			}
		},
		{
			"name": "Obtenir un film par ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/movies/1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"movies",
						"1"
					]
				},
				"description": "Récupérer un film spécifique par son ID"
			}
		},
		{
			"name": "Mettre à jour un film",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Inception - Director's Cut\",\n    \"description\": \"Version réalisateur du thriller de science-fiction complexe sur les rêves\",\n    \"duration\": 158\n}"
				},
				"url": {
					"raw": "{{base_url}}/movies/1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"movies",
						"1"
					]
				},
				"description": "Mettre à jour un film existant"
			}
		},
		{
			"name": "Supprimer un film",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/movies/1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"movies",
						"1"
					]
				},
				"description": "Supprimer un film"
			}
		}
	]
}
